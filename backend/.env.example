# Application Settings
APP_NAME=Super App Backend
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Security Settings
SECRET_KEY=your-super-secret-key-min-32-chars-long-for-banking-security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings (MySQL)
MYSQL_USER=root
MYSQL_PASS=your password
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DB=superapp_db

# Database Settings (MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=superapp_ecommerce
MONGODB_SCHEMA_SAMPLE_SIZE=100

# Encryption Settings
ENCRYPTION_KEY=your-32-byte-encryption-key-base64
SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8081"]